<div class="row">
    <h3 class="card">{{<article.title}}</h3>
    <h5 class="card-panel articleBody">{{body}}</h5>
</div>
<div class="row">
    <div class="col s2"></div>
    <form action="/comment/{{article._id}}" method="POST" class="card-panel col s8">
        <h5>Comment Here</h5>
        <div class="row">
            <div class="input-field">
                <input type="text" placeholder="name" name="name ">
            </div>
            <div class="input-field">
                <input type="text" placeholder="comment" name="comment  ">
            </div>
            <div class="row">
                <div class="input-field">
                    <center><input type="text" class="btn add-comment-button topnav" type="submit" value="submit">
                    </center>
                </div>
            </div>>
    </form>
</div>
<div class="row">
    <div class="col s2"></div>
    <div class="col s8">
        <h5>comments:</h5>
        {{#if article.comment}}
        {{#each article.comment}}
        <div class="card">
            <p id="nameComment">{{name}}</p>
            <p>{{body}}</p>
        </div>
        {{/each}}
        {{else}}
        <p>no comments </p>
        {{/if}}
    </div>
</div>